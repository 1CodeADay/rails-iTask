<div class="description" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url('<%= asset_path('new.jpeg') %>')">
  <h1>New Task</h1>
    <%= form_with model: @task do |f| %>
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %>
      <br>
      <%= f.label :position %>
      <br>
      <%= f.text_field :position %>
      <br>
      <%= f.label :destination %>
      <br>
      <%= f.text_field :destination %>
      <br><br>
      <%= f.submit value:"Add Task", class:"btn-add" %>
      <br>
    <% end %>
</div>
