<div class="description" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url('<%= asset_path('new.jpeg') %>')">
  <h1>New Task</h1>
    <%= form_with model: @task do |f| %>
      <%= f.label :title, class:"input" %>
      <br>
      <%= f.text_field :title, class:"input" %>
      <br>
      <%= f.label :description, class:"input" %>
      <br>
      <%= f.text_area :description, class:"input" %>
      <br>
      <%= f.label :category, class:"input" %>
      <br>
      <%= f.select :category, ['Documents', 'Packages', 'Specials', 'Others'], class:"input" %>
      <br>
      <%= f.label :from, class:"input" %>
      <br>
      <%= f.text_field :from, class:"input" %>
      <br>
      <%= f.label :to, class:"input" %>
      <br>
      <%= f.text_field :to, class:"input" %>
      <br><br>
      <%= f.submit value:"Validate the Task", class:"btn-add" %>
      <br>
    <% end %>
</div>
