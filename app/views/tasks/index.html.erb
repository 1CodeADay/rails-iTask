<div id="index-page">
  <div class="task-container">
    <div class="task-box">
    <% @tasks.each do |task| %>
      <div class="task-item">
        <a href="/tasks/<%= task.id %>" class="task-item-link">
          <div class="task-item-corner"></div>
          <div class="task-item-title"><%= task.title %></div>
          <div class="task-item-info">Date :
            <span class="task-item-info-sp"><%= task.created_at %></span>
          </div>
          <div class="task-item-info">Category :
            <span class="task-item-info-sp"><%= task.category %></span>
          </div>
          <div class="task-item-info">From :
            <span class="task-item-info-sp"><%= task.from %></span>
          </div>
          <div class="task-item-info">To :
            <span class="task-item-info-sp"><%= task.to %></span>
          </div>
        </a>
      </div>
      <% end %>
    </div>
  </div>
</div>
