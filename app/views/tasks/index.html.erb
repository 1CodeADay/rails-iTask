<div class="task-container">
  <div class="task-box">
  <% @tasks.each do |task| %>
    <div class="task-item">
      <a href="/tasks/<%= task.id %>" class="task-item-link">
        <div class="task-item-bg"></div>
        <div class="task-item-description"><%= task.description %></div>
        <div class="task-item-date">Date :
          <span class="task-item-date-day"><%= task.created_at %></span>
        </div>
        <div class="task-item-date">From :
          <span class="task-item-date-day"><%= task.position %></span>
        </div>
        <div class="task-item-date">To :
          <span class="task-item-date-day"><%= task.destination %></span>
        </div>
      </a>
    </div>
    <% end %>
  </div>
</div>
